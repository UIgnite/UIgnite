{
  "name": "uignite",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"docs,registry\" --prefix-colors \"green,yellow\" \"yarn --cwd=website/docs dev\" \"yarn --cwd=website/registry dev\"",
    "format": "prettier . --write",
    "build": "lerna run build --concurrency=1",
    "clean": "rimraf ./packages/**/dist ./website/**/dist"
  },
  "author": "uignite team",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "lerna": "^8.2.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1"
  },
  "workspaces": [
    "website/*",
    "packages/*"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "shadcn": "^2.4.0",
    "tailwind-merge": "^3.2.0"
  }
}
